<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/manhole_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:id="@+id/manhole_tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mock_gage_asgaega"
            android:textColor="@color/manhole_pure_black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/manhole_tvClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="╳"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>


    <TextView
        android:id="@+id/manhole_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:text="哈哈哈"
        android:textColor="@color/manhole_pure_black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/manhole_tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:text="hoghagheia\n横哦啊横车哈工程\nhogahgeiagbobogagehgaoheigagoi\nhoghaeigaehgieahgeaoigh"
        android:textColor="@color/manhole_99"
        android:textSize="15sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/manhole_rvCase"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>